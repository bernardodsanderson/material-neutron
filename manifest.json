{
  "name": "Super Neutron Drive",
  "short_name": "Neutron",
  "description": "The honey badger of code editors",
  "version": "15.4.1",
  
  "app": {
    "background": {
      "scripts": ["js/background.js"]
    }
  },
  
  "icons": {
    "256": "img/icon-256.png",
    "128": "img/icon-128.png",
    "64": "img/icon-64.png"
  },
  
  "offline_enabled": true,
  
  "permissions": [
    "identity",
    "storage",
    "webview",
    "clipboardWrite",
    {"fileSystem": ["write", "retainEntries", "directory"]},
    
    "http://manx.neutrondrive.com:8080/*",
    "https://super.neutrondrive.com/*",
    "https://*.chromiumapp.org/*",
    "https://drive.google.com/*"
  ],
  
  "file_handlers": {
    "text": {
      "types": ["text/*"],
